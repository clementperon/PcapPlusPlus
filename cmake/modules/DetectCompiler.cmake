if(CMAKE_CXX_COMPILER_ID MATCHES "MSVC")
  set(PCAPPP_TARGET_COMPILER_MSVC 1)
  set(PCAPPP_TARGET_COMPILER "vscode")
elseif(CMAKE_CXX_COMPILER_ID MATCHES "AppleClang")
  set(PCAPPP_TARGET_COMPILER_CLANG 1)
  set(PCAPPP_TARGET_COMPILER "xcode")
elseif(CMAKE_CXX_COMPILER_ID MATCHES "Clang")
  set(PCAPPP_TARGET_COMPILER_CLANG 1)
  set(PCAPPP_TARGET_COMPILER "clang")
elseif(CMAKE_CXX_COMPILER_ID MATCHES "GNU")
  set(PCAPPP_TARGET_COMPILER_GCC 1)
  set(PCAPPP_TARGET_COMPILER "gcc")
elseif(CMAKE_CXX_COMPILER_ID MATCHES "Intel")
  set(PCAPPP_TARGET_COMPILER_INTEL 1)
  set(PCAPPP_TARGET_COMPILER "intel")
else()
  message(FATAL_ERROR "Unsupported Compiler: ${CMAKE_CXX_COMPILER_ID}")
endif()
